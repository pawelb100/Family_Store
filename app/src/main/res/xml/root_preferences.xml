<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Interfejs">

        <ListPreference
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="Motyw"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="classic"
            app:entries="@array/color_light_entries"
            app:entryValues="@array/color_light_values"
            app:key="color_light"
            app:title="Kolor dla trybu jasnego"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="blue"
            app:entries="@array/color_dark_entries"
            app:entryValues="@array/color_dark_values"
            app:key="color_dark"
            app:title="Kolor dla trybu ciemnego"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Powiadomienia">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Otrzymuj powiadomienia"
            app:defaultValue="false"
            app:enabled="false"
            app:summaryOff="Dostępne wkrótce"
            />

    </PreferenceCategory>

</PreferenceScreen>